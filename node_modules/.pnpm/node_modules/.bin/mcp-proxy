#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/Users/apple/dev/hackathon/crunch/node_modules/.pnpm/mcp-proxy@5.5.0/node_modules/mcp-proxy/dist/bin/node_modules:/Users/apple/dev/hackathon/crunch/node_modules/.pnpm/mcp-proxy@5.5.0/node_modules/mcp-proxy/dist/node_modules:/Users/apple/dev/hackathon/crunch/node_modules/.pnpm/mcp-proxy@5.5.0/node_modules/mcp-proxy/node_modules:/Users/apple/dev/hackathon/crunch/node_modules/.pnpm/mcp-proxy@5.5.0/node_modules:/Users/apple/dev/hackathon/crunch/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/Users/apple/dev/hackathon/crunch/node_modules/.pnpm/mcp-proxy@5.5.0/node_modules/mcp-proxy/dist/bin/node_modules:/Users/apple/dev/hackathon/crunch/node_modules/.pnpm/mcp-proxy@5.5.0/node_modules/mcp-proxy/dist/node_modules:/Users/apple/dev/hackathon/crunch/node_modules/.pnpm/mcp-proxy@5.5.0/node_modules/mcp-proxy/node_modules:/Users/apple/dev/hackathon/crunch/node_modules/.pnpm/mcp-proxy@5.5.0/node_modules:/Users/apple/dev/hackathon/crunch/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../mcp-proxy/dist/bin/mcp-proxy.js" "$@"
else
  exec node  "$basedir/../mcp-proxy/dist/bin/mcp-proxy.js" "$@"
fi
